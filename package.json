{
  "name": "@xwfintech/zookeeper",
  "version": "0.0.0",
  "description": "",
  "main": "./lib/index.js",
  "module": "./lib/index.es.js",
  "typings": "./lib/types/index.d.ts",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc --module commonjs && rollup -c rollup.config.js",
    "commit": "git add -A && git-cz",
    "publish": "npm publish --registry http://xwnpm.xwfintech.com",
    "release-major": "yarn build && standard-version -r major",
    "release-minor": "yarn build && standard-version -r minor",
    "release-patch": "yarn build && standard-version -r patch"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.xwfintech.com:youngluo/zookeeper.git"
  },
  "keywords": [
    "zookeeper"
  ],
  "engines": {
    "node": ">=10.15.3"
  },
  "author": "young",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^7.6.0",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/lodash": "^4.14.124",
    "@types/node": "^12.0.4",
    "@types/node-zookeeper-client": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "rollup": "^1.13.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.1",
    "standard-version": "^6.0.1",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "node-zookeeper-client": "^0.2.3"
  }
}
